<UserControl x:Class="PAWB.WPF.Views.SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:PAWB.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FFB8FFCE">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name ="Username" Grid.Row="2" Grid.Column="1" Text="Username" Margin="228,154,225,-105"/>
        <TextBox x:Name="tbUsername" Grid.Row="2" Grid.Column="1" Margin="231,175,220,43" Background="#FFFFF5F5"/>

        <TextBlock x:Name ="Email" Grid.Row="2" Grid.Column="1" Text="Email" Margin="230,208,225,-113"/>
        <TextBox x:Name ="tbEmail" Grid.Row="2" Grid.Column="1" Margin="228,224,224,-6" Background="#FFFFF5F5"/>

        <TextBlock x:Name ="Password" Grid.Row="2" Grid.Column="1" Text="Password" Margin="231,252,223,-118"/>
        <PasswordBox x:Name="pbPassword" Grid.Row="2" Grid.Column="1" Margin="228,270,227,-55" Background="#FFFFF5F5"/>
        <Image Source="/Images/BrokenLoginBar.png" Width="115" Grid.Column="1" Margin="489,228,215,-97" Grid.Row="2"/>


        <TextBlock Grid.Row="2" Grid.Column="1" Text="Welcome to Pawble" Margin="136,71,0,97" Foreground="#FFFF7A78" FontFamily="Showcard Gothic" FontSize="50" HorizontalAlignment="Left"/>


        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"
                IsDefault="True"
                Content="Sign-up"
                Click="SignUp_Click" Margin="370,316,0,-113" RenderTransformOrigin="0.458,0.535" FontFamily="Showcard Gothic" FontSize="19" Foreground="#FFE17A82"/>

        <Image Source="/Images/LoginPawble.png" Width="280" Grid.Column="1" Margin="524,236,0,-244" Grid.Row="2"/>

    </Grid>
</UserControl>


