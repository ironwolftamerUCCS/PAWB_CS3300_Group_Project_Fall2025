<UserControl x:Class="PAWB.WPF.Views.SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:PAWB.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FFB8FFCE">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name ="tbUsername" Grid.Row="2" Grid.Column="1" Text="Username" Margin="231,134,222,86"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="228,199,133,13" Background="#FFFFF5F5"/>

        <TextBlock x:Name ="tbEmail" Grid.Row="2" Grid.Column="1" Text="Email" Margin="230,183,225,37"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="228,150,133,62" Background="#FFFFF5F5"/>

        <TextBlock x:Name ="tbPassword" Grid.Row="2" Grid.Column="1" Text="Password" Margin="231,229,223,-9"/>
        <PasswordBox x:Name="pbPassword" Grid.Row="2" Grid.Column="1" Margin="228,245,133,-33" Background="#FFFFF5F5"/>


        <TextBlock Grid.Row="2" Grid.Column="1" Text="Welcome to Pawble" Margin="136,43,0,125" Foreground="#FFFF7A78" FontFamily="Showcard Gothic" FontSize="50" HorizontalAlignment="Left"/>


        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"
                IsDefault="True"
                Content="Sign-up"
                Click="SignUp_Click" Margin="370,316,0,-113" RenderTransformOrigin="0.458,0.535" FontFamily="Showcard Gothic" FontSize="19" Foreground="#FFE17A82"/>

        <Image Source="/Images/BlueCollarLogin.png" Width="130" Grid.Column="1" Margin="648,233,-84,-241" Grid.Row="2" Stretch="Uniform"/>
        <Image Source="/Images/FixedSignUpBar.png" Grid.Column="1" Grid.Row="2" Height="25" Margin="541,245,133,-33"/>

    </Grid>
</UserControl>


