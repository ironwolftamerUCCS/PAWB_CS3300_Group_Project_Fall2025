<Window x:Class="PAWB.WPF.Views.AddEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAWB.WPF.Views"
        mc:Ignorable="d"
        Title="AddEntry" Height="450" Width="800">
    <Grid Background="#FFB8FFCE" Margin="10">

        <StackPanel>
            <TextBlock Text="Enter Account:"/>
            <TextBox x:Name="AccountTextBox" Margin="0,5,0,15"/>

            <TextBlock Text="Enter Account Username"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,5,0,15"/>

            <TextBlock Text="Enter Account Password"/>
            <TextBox x:Name="PasswordTextBox" Margin="0,5,0,15"/>
            

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Add" Width="70" Margin="0,0,10,0" Click="AddButton_Click"/>
                <Button Content="Cancel" Width="70" Click="CancelButton_Click"/>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Window>
