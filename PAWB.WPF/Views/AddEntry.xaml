<Window x:Class="PAWB.WPF.Views.AddEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAWB.WPF.Views"
        mc:Ignorable="d"
        Title="AddEntry" Height="450" Width="800">
    <Grid Background="#FFB8FFCE">

        <StackPanel>
            <TextBlock Text="Enter Account:" Margin="10,10,10,0" FontFamily="Arial Rounded MT Bold"/>
            <TextBox x:Name="AccountTextBox" Margin="10,5,10,15" BorderBrush="#69a17a"/>

            <TextBlock Text="Enter Account Email" Margin="10,0,10,0" FontFamily="Arial Rounded MT Bold"/>
            <TextBox x:Name="EmailTextBox" Margin="10,5,10,15" BorderBrush="#69a17a"/>

            <TextBlock Text="Enter Account Username" Margin="10,0,10,0" FontFamily="Arial Rounded MT Bold"/>
            <TextBox x:Name="UsernameTextBox" Margin="10,5,10,15" BorderBrush="#69a17a"/>

            <TextBlock Text="Enter Account Password" Margin="10,0,10,0" FontFamily="Arial Rounded MT Bold"/>
            <TextBox x:Name="PasswordTextBox" Margin="10,5,10,15" BorderBrush="#69a17a"/>

            <TextBlock Text="Notes" Margin="10,0,10,0" FontFamily="Arial Rounded MT Bold"/>
            <TextBox x:Name="NotesTextBox" Margin="10,5,10,15" Height="50" BorderBrush="#69a17a"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Add" Width="70" Margin="0,0,10,0" Click="AddButton_Click" Background="Beige" BorderBrush="#69a17a"  FontFamily="Arial Rounded MT Bold"/>
                <Button Content="Cancel" Width="70" Margin="0,0,10,0" Click="CancelButton_Click" Background="Beige" BorderBrush="#69a17a" FontFamily="Arial Rounded MT Bold"/>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Window>
