<Window x:Class="PAWB.WPF.Views.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAWB.WPF.Views"
        mc:Ignorable="d"
        Title="Details" Height="200" Width="350" Background="#FFF5F4">


    <Grid Margin="10" Background="#FFF5F4">
        <StackPanel>
            <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="{Binding Email, StringFormat=Email: {0}}" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Username, StringFormat=Username: {0}}" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Password, StringFormat=Password: {0}}" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Description, StringFormat=Notes: {0}}" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Margin="0,10,0,0"/>


        </StackPanel>

        <Image Source="/Images/BlueCollarPawble.png" Margin="152,-14,-70,-40"/>

    </Grid>
</Window>