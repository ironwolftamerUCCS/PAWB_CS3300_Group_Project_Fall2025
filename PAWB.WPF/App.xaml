<Application
    x:Class="PAWB.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="clr-namespace:PAWB.WPF.ViewModels"
    xmlns:views="clr-namespace:PAWB.WPF.Views"
    xmlns:local="clr-namespace:PAWB.WPF">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ScaryPawble.xaml"/>
                <ResourceDictionary Source="Themes/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            
            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                <views:LoginView LoginCommand="{Binding LoginCommand}"/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:SignUpModel}">
                <views:SignUp SignUpCommand="{Binding SignUpCommand}"/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
