    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Cursors\browncursorpaw.cur" />
    <None Remove="Cursors\greywhitecursorpaw.cur" />
