  </ItemGroup>

  <ItemGroup>
    <Resource Include="Cursors\browncursorpaw.cur">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Cursors\greywhitecursorpaw.cur">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Cursors\pawcursordefault.cur">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Cursors\whitegreycursorpaw.cur">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\BlueCollarPawble.png" />
    <Resource Include="Images\BrokenLoginBar.png" />
    <Resource Include="Images\LoginPawble.png" />
